{
	"manifest_version": 2,
    "name": "Anti Advertisements",
    "version": "1.0",
    "description": "No Ads.",
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
	"browser_action": {
        "default_icon": {
            "19": "images/icon19.png",
            "38": "images/icon38.png"
        },
        "default_title": "Extension Title",
        "default_popup": "popup.html"
    },
	"content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["js/anti-ads.js"],
			"css": ["css/anti-ads.css"]
        }
    ]
}